\usepackage[T1]{fontenc}						% for correct hyphenation and T1 encoding
%\RequirePackage{lmodern}
%\RequirePackage{tgheros}						% Helvetica
%\renewcommand{\familydefault}{\sfdefault}
\RequirePackage{fontspec}  % Required for custom fonts
\RequirePackage{unicode-math}  % For proper math font handling with fontspec

% Define the font families
\setmainfont{din-light.ttf}[Path=./]           % DIN Light as main font
\setsansfont{din-light.ttf}[Path=./]           % DIN Light as sans serif
\newfontfamily\dinmedium{din-medium-regular.ttf}[Path=./]  % Define DIN Medium

% Set math font to maintain traditional math appearance
\setmathfont{Latin Modern Math}  % Traditional math font

\renewcommand{\familydefault}{\sfdefault}
\RequirePackage{microtype}					% for character protrusion and font expansion
\usefonttheme[onlymath]{serif}				% math like in the papers (serif)
\urlstyle{same}

% Font size of the title frame (using DIN Medium)
\setbeamerfont{title}{size=\Large,series=\mdseries,family=\dinmedium}
\setbeamerfont{author}{size=\footnotesize,series=\bfseries}
\setbeamerfont{date}{size=\footnotesize,series=\bfseries}
% Font size of the frame titles and toc (using DIN Medium)
\setbeamerfont{frametitle}{size=\large,family=\dinmedium}
\setbeamerfont{framesubtitle}{size=\footnotesize,family=\dinmedium}
\setbeamerfont{section in toc}{size=\normalsize,family=\dinmedium}
% Font size of the slide content (using DIN Light - default)
\setbeamerfont{normal text}{size=\footnotesize}
\setbeamerfont{block title}{size=\footnotesize,family=\dinmedium}
\setbeamerfont{itemize/enumerate body}{size=\footnotesize}
\setbeamerfont{itemize/enumerate subbody}{size=\footnotesize}
\setbeamerfont{itemize/enumerate subsubbody}{size=\footnotesize}
\AtBeginDocument{\usebeamerfont{normal text}}